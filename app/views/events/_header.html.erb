<section id="event_header">
	<ul id="event_options">
		<li><%= link_to 'show activity', event_path(event), :class => controller_name == 'events' ? 'active' : 'inactive' %></li>
		<li><%= link_to 'show all photos', event_photos_path(event), :class => controller_name == 'photos' ? 'active' : 'inactive' %></li>
		<li><%= link_to 'show members', '#', :class => controller_name == 'members' ? 'active' : 'inactive' %></li>
		<% unless current_user && (event.manager_id == current_user.id || event.user_ids.include?(current_user.id)) %>
		<li><%= link_to 'join event', join_event_path(event) %></li>
		<% end %>
		<% if controller_name == 'photos' %>
			<li> Layout: </li>
			<li><%= link_to 'thumbnails', 	event_photos_path(event), :class => controller_name == 'photos' && @size == 'large_thumb' ? 'active' : 'inactive' %></li>
			<!-- <li><%# link_to 'medium', event_photos_path(event, :size => 'medium'), :class => controller_name == 'photos' &&  @size == 'medium'  ? 'active' : 'inactive' %></li>-->
			<li><%= link_to 'large photos', 	event_photos_path(event, :size => 'large'), :class => controller_name == 'photos'  &&  @size == 'large' ? 'active' : 'inactive' %></li>
		<% end %>
	</ul>
</section>