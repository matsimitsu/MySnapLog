<figure class ="photo photo_large_thumb" id="<%= dom_id(photo) %>">
	<%= link_to(image_tag(photo.image_url(:large_thumb)), [photo.event, photo]) %>
	<figcaption>
		<ul>
			<li class="views"><span><%= photo.view_count_for_version(:thumb) %></span></li>
			<li class="comments"><span><%= photo.comments.count %></span></li>
			<li class="likes active" id="like">
				<span><%= photo.likes %></span>
			</li>
		</ul>
		<span></span>
	</figcaption>
</figure>