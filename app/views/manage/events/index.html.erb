<div class="manage_header">
	<h2>Your events</h2>
	<%= link_to 'New event', new_manage_event_path, :class => 'button new_event' %>
</div>
<section>
	<table id="events">
		<tr>
			<th>Name</th>
			<th>Photos</th>
			<th>Comments</th>
			<th>Created</th>
			<th>Actions</th>
		</tr>
		<% @events.each do |event| %>
			<%= render 'event', :event => event %>
		<% end %>
	</table>
</section>