<% ubb_string = ''%>
<% @photos.each do |photo| %>
	<% ubb_string << "[url=#{external_url(url_for([photo.event.user, photo.event, photo]))}][img]#{external_url(photo.image_url(:medium))}[/img][/url] \n\n"%>
<% end %>

<h2>UBB Tags</h2>
<section>	
	<p class="info">Use these ubb tags to show the photos on a forum</p>
	<%= text_area_tag 'ubb', ubb_string, :rows => 50, :cols => 100 %><br />
	<%= link_to 'back to events', manage_events_path %>
</section>