<div class="manage_header">
	<h2>Edit My Account</h2>
</div>
<section>
<% form_for @user, :url => manage_profile_path do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form", :object => f %>
  <%= f.submit "Update" %>
<% end %>

<br /><%= link_to "My Profile", user_path(@user) %>
</section>