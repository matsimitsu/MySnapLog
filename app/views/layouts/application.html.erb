<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
	  <title>MySnapLog <%= " - #{@user.username}" if @user %></title>
		<link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">
	  <%= stylesheet_link_tag 'style' %>
	  <%= javascript_include_tag :defaults, :swf_upload %>
		<!--[if lte IE 9]>
			<%= javascript_include_tag 'html5' %>
		<![endif]-->
	</head>
	<body class="<%= controller_name %> <%= action_name %>">
		<div id="outer">
			<div id="wrapper">
				<header id="header">
					<h1><%= @user && !@user.new_record? ? link_to("MySnapLog - #{content_tag('span', @user.username, :class => 'user')}", user_path(@user)): link_to('MySnapLog', root_path) %></h1>
					<nav>
						<ul id="menu">
						</ul>
					</nav>
				</header>
				<div id="main">
					<% if flash[:notice] -%>
						<div class="flash_notice"><%= flash[:notice] %></div>
					<% end -%>
					
					<%= yield  %>
				</div>
			</div>
		</div>
	</body>
</html>